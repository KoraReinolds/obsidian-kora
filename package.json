{
	"name": "obsidian-sample-plugin",
	"version": "1.0.0",
	"description": "This is a sample plugin for Obsidian (https://obsidian.md)",
	"main": "main.js",
	"type": "module",
	"scripts": {
		"dev": "node esbuild.config.mjs",
		"watch:mcp": "nodemon --watch ./mcp-server.ts --ext ts --exec 'bun build ./mcp-server.ts --outdir=./build --target=bun'",
		"gramjs-auth": "cd gramjs-server && npm run build && npm run auth",
		"gramjs-server": "cd gramjs-server && npm run build && npm start",
		"gramjs-dev": "cd gramjs-server && npm run dev:dual",
		"dev-all": "concurrently \"npm run dev\" \"npm run watch:mcp\" \"npm run gramjs-dev\" --names \"obsidian,mcp,gramjs\" --prefix-colors \"blue,green,yellow\"",
		"build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:telegram": "vitest run modules/telegram/__tests__",
		"version": "node version-bump.mjs && git add manifest.json versions.json"
	},
	"keywords": [],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@types/node": "^20.0.0",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"@vitest/coverage-v8": "^1.6.1",
		"builtin-modules": "3.3.0",
		"concurrently": "^9.2.0",
		"esbuild": "0.17.3",
		"nodemon": "^3.1.10",
		"obsidian": "latest",
		"tslib": "2.4.0",
		"typescript": "4.7.4",
		"vitest": "^1.6.1"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.12.3",
		"@qdrant/js-client-rest": "^1.15.0",
		"cors": "^2.8.5",
		"crypto": "^1.0.1",
		"dotenv": "^17.2.0",
		"express": "^4.18.2",
		"input": "^1.0.1",
		"node-telegram-bot-api": "^0.66.0",
		"openai": "^4.68.4",
		"telegram": "^2.22.2",
		"uuid": "^11.1.0",
    "zod": "^3.25.67"
  },
  "vitest": {
    "include": [
      "modules/chunking/__tests__/**/*.spec.ts",
      "modules/telegram/__tests__/**/*.{test,spec}.ts"
    ],
    "exclude": [
      "mcp-obsidian/**",
      "gramjs-server/**"
    ],
    "environment": "node",
    "setupFiles": ["modules/telegram/__tests__/setup.ts"],
    "coverage": {
      "provider": "v8",
      "reporter": ["text", "json", "html"],
      "include": [
        "modules/telegram/**/*.ts"
      ],
      "exclude": [
        "modules/telegram/__tests__/**",
        "**/*.d.ts"
      ],
      "thresholds": {
        "global": {
          "branches": 80,
          "functions": 80,
          "lines": 80,
          "statements": 80
        }
      }
    }
  }
}
